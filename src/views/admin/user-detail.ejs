<%- include ('../layout/admin-header') %>

<div class="page-content page-container" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">
      <div class="col-lg-12 col-md-12">
        <div class="card user-card-full">
          <div class="row m-l-0 m-r-0">
            <% for(let i=0; i < users.length; i++) { %>
            <div class="col-sm-4 bg-c-lite-green user-profile">
              <div class="card-block text-center text-white">
                <div class="m-b-25">
                  <img
                    src="https://img.icons8.com/bubbles/100/000000/user.png"
                    class="img-radius"
                    alt="User-Profile-Image"
                  />
                </div>
                <h6 class="f-w-600"><%= users[i].full_name %></h6>
                <p>Hello Everyone</p>
                <i
                  class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"
                ></i>
              </div>
            </div>
            <div class="col-sm-8">
              <div class="card-block">
                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Email</p>
                    <h6 class="text-muted f-w-400"><%= users[i].email %></h6>
                  </div>
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Authentication</p>
                    <h6 class="text-muted f-w-400"><%= users[i].username %></h6>
                  </div>
                </div>
                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">
                  Personal Schedule
                </h6>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Time Off Total</p>
                    <h6 class="text-muted f-w-400"><%= users[i].time_off_total %></h6>
                  </div>
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Time Off Remain</p>
                    <h6 class="text-muted f-w-400"><%= users[i].time_off_remain %></h6>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Quantity Of Day Off</p>
                    <h6 class="text-muted f-w-400"><%= users[i].request[i].quantity %></h6>
                  </div>
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Time Off </p>
                    <h6 class="text-muted f-w-400"><%= users[i].request[i].time_off %></h6>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Request Type</p>
                    <h6 class="text-muted f-w-400"><%= users[i].request[i].request_type %></h6>
                  </div>
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Status </p>
                    <h6 class="text-muted f-w-400"><%= users[i].request[i].status %></h6>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
